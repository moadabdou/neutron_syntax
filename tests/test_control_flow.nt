// Test control flow
say("=== Testing Control Flow ===");

// Test 1: Simple if statement
var x = 10;
if (x == 10) {
    say("✓ Simple if statement works");
} else {
    say("✗ Simple if statement failed");
}

// Test 2: If-else statement
var y = 5;
if (y > 10) {
    say("✗ If-else condition wrong");
} else {
    say("✓ If-else statement works");
}

// Test 3: Nested if statements
var a = 10;
var b = 20;
if (a < b) {
    if (a == 10) {
        say("✓ Nested if statements work");
    } else {
        say("✗ Nested if inner failed");
    }
} else {
    say("✗ Nested if outer failed");
}

// Test 4: While loop
var i = 0;
var sum = 0;
while (i < 5) {
    sum = sum + i;
    i = i + 1;
}
if (sum == 10) {
    say("✓ While loop works");
} else {
    say("✗ While loop failed");
}

// Test 5: While loop with condition
var count = 0;
while (count < 10) {
    count = count + 1;
    if (count == 5) {
        break;
    }
}
if (count == 5) {
    say("✓ While with break works");
} else {
    say("✗ While with break failed");
}

// Test 6: Complex conditions
var val = 15;
if (val > 10 and val < 20) {
    say("✓ Complex conditions work");
} else {
    say("✗ Complex conditions failed");
}

say("\n=== All control flow tests passed ===");
