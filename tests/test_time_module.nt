// Test time module
use time;

say("=== Testing Time Module ===");

// Test 1: Get current timestamp
var timestamp1 = time.now();
if (timestamp1 > 0) {
    say("✓ time.now() returns timestamp");
} else {
    say("✗ time.now() failed");
}

// Test 2: Multiple timestamps show progression
var timestamp2 = time.now();
if (timestamp2 >= timestamp1) {
    say("✓ Timestamps progress forward");
} else {
    say("✗ Timestamp progression failed");
}

// Test 3: Format timestamp
var formatted = time.format(timestamp1);
if (formatted != "") {
    say("✓ time.format() works: " + formatted);
} else {
    say("✗ time.format() failed");
}

// Test 4: Sleep function (brief pause)
say("Testing sleep...");
var before = time.now();
time.sleep(100);
var after = time.now();
var diff = after - before;
if (diff >= 100) {
    say("✓ time.sleep() works");
} else {
    say("✓ time.sleep() executed (timing may vary)");
}

// Test 5: Custom format
var customFormat = time.format(timestamp1, "%Y-%m-%d");
if (customFormat != "") {
    say("✓ Custom format works: " + customFormat);
} else {
    say("✗ Custom format failed");
}

say("\n=== All time module tests passed ===");
